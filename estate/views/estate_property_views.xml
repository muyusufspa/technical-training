<odoo>
	<record id="estate_property_action" model="ir.actions.act_window">
		<field name="name">Estate Property</field>
		<field name="res_model">real.estate.property</field>
		<field name="view_mode">tree,form</field>
	</record>

	
    <record id="view_real_estate_property_form" model="ir.ui.view">
    <field name="name">real.estate.property.form</field>
    <field name="model">real.estate.property</field>
    <field name="arch" type="xml">
        <form string="Real Estate Property">
            <!-- General Information Section -->
            <header>
                <h1>General Information</h1>
            </header>
            <group>
                <field name="name"/>
                <field name="description" widget="text"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
            </group>

            <!-- Details Section Tab -->
            <notebook>
                <page string="Details">
                    <group>
                        <field name="selling_price"/>
                        <field name="bedrooms"/>
                        <field name="last_seen"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                    </group>
                </page>
            </notebook>

            <!-- Additional Information Section -->
            <header>
                <h2>Additional Information</h2>
            </header>
            <group>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="kitchen_type"/>
            </group>

            <!-- Status and Activation Section -->
            <header>
                <h2>Status and Activation</h2>
            </header>
            <group>
                <field name="active"/>
                <field name="state"/>
            </group>
        </form>
    </field>
</record>




	<record id="estate_property_tree_view" model="ir.ui.view">
		<field name="name">Estate Property Tree View</field>
		<field name="model">real.estate.property</field>
		<field name="arch" type="xml">
			<!-- add nice layout of the fields in tree -->
			<tree>
				<field name="name" />
				<field name="state" />
				<field name="expected_price" />
			</tree>
		</field>
	</record>
</odoo>
