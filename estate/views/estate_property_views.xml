<odoo>
	<record id="estate_property_action" model="ir.actions.act_window">
		<field name="name">
			Estate Property
		</field>
		<field name="res_model">
			real.estate.property
		</field>
		<field name="view_mode">
			tree,form
		</field>
	</record>

	<record id="estate_property_form_view" model="ir.ui.view">
		<field name="name">
			Estate Property Form View
		</field>
		<field name="model">
			real.estate.property
		</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<!-- Header Section -->
					<div class="o_form_sheet">
						<div class="o_group">
							<h2 class="o_form_title">
								Property Details
							</h2>
						</div>
					</div>
					<!-- Main Content Section -->
					<div class="o_notebook">
						<div class="o_notebook_page">
							<h3 class="o_page_title">
								Details of Property
							</h3>
							<div class="o_group">
								<field name="description" />
							</div>
						</div>
						<div class="o_group">
							<field name="expected_price" />
							<field name="date_availability" />
							<field name="selling_price" />
						</div>
						<div class="o_group">
							<field name="bedrooms" />
							<field name="living_area" />
							<field name="facades" />
							<field name="garage" />
							<field name="garden" />
							<field name="garden_area" />
							<field name="garden_orientation" />
							<field name="kitchen_type" />
							<field name="active" />
							<field name="state" />
						</div>
					</div>
				</sheet>
			</form>
		</field>
	</record>

	<record id="estate_property_tree_view" model="ir.ui.view">
		<field name="name">
			Estate Property Tree View
		</field>
		<field name="model">
			real.estate.property
		</field>
		<field name="arch" type="xml">
			<!-- add nice layout of the fields in tree -->
			<tree>
				<field name="name" />
				<field name="state" />
				<field name="expected_price" />
			</tree>
		</field>
	</record>
</odoo>
